load("//tools:defaults.bzl", "sass_binary")
load("//tools:defaults2.bzl", "ng_project")

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "datepicker",
    srcs = glob(["**/*.ts"]),
    assets = [
        "datepicker-demo.html",
        "custom-header.html",
        ":datepicker_demo_scss",
        ":custom_header_scss",
    ],
    deps = [
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/forms",
        "//:node_modules/rxjs",
        "//src/dev-app:node_modules/@angular/material",
    ],
)

sass_binary(
    name = "datepicker_demo_scss",
    src = "datepicker-demo.scss",
    deps = [
        "//src/material:sass_lib",
    ],
)

sass_binary(
    name = "custom_header_scss",
    src = "custom-header.scss",
)
