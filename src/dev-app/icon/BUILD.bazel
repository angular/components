load("//tools:defaults.bzl", "ng_module", "sass_binary")

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "icon",
    srcs = glob(["**/*.ts"]),
    assets = [
        "icon-demo.html",
        ":icon_demo_scss",
    ],
    deps = [
        "//src/material/icon",
    ],
)

sass_binary(
    name = "icon_demo_scss",
    src = "icon-demo.scss",
)

filegroup(
    name = "icon_demo_assets",
    srcs = glob(["assets/**/*"]),
)
