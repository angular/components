load("//tools:defaults.bzl", "ng_web_test_suite")
load("//tools:defaults2.bzl", "ng_project", "ts_project")

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "tree",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = glob([
        "**/*.html",
        "**/*.css",
    ]),
    deps = [
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/platform-browser",
        "//:node_modules/@types/jasmine",
        "//:node_modules/rxjs",
        "//src/components-examples:node_modules/@angular/cdk",
        "//src/components-examples:node_modules/@angular/material",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.css",
        "**/*.ts",
    ]),
)

ts_project(
    name = "unit_tests_lib",
    testonly = True,
    srcs = glob(["**/*.spec.ts"]),
    deps = [
        ":tree",
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/platform-browser",
        "//src/components-examples:node_modules/@angular/cdk",
        "//src/components-examples:node_modules/@angular/material",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_tests_lib"],
)
