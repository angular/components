load("//tools:defaults.bzl", "ng_test_library", "ng_web_test_suite")
load("//tools:defaults2.bzl", "ts_project")

package(default_visibility = ["//visibility:public"])

ts_project(
    name = "testing",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    interop_deps = [
        "//src/cdk/overlay",
        "//src/cdk/testing",
        "//src/material/dialog",
    ],
    deps = [
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/platform-browser",
        "//:node_modules/rxjs",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

ng_test_library(
    name = "unit_tests_lib",
    srcs = glob(["**/*.spec.ts"]),
    deps = [
        ":testing",
        "//src/cdk/overlay",
        "//src/cdk/testing",
        "//src/cdk/testing/testbed",
        "//src/material/dialog",
        "@npm//@angular/platform-browser",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [
        ":unit_tests_lib",
    ],
)
