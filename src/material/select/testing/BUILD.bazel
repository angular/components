load("//tools:defaults.bzl", "ng_web_test_suite")
load("//tools:defaults2.bzl", "ts_project")

package(default_visibility = ["//visibility:public"])

ts_project(
    name = "testing",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    interop_deps = [
        "//src/cdk/testing",
        "//src/material/core/testing",
        "//src/material/form-field/testing/control",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

ts_project(
    name = "unit_tests_lib",
    testonly = True,
    srcs = glob(["**/*.spec.ts"]),
    interop_deps = [
        ":testing",
        "//src/cdk/overlay",
        "//src/cdk/testing",
        "//src/cdk/testing/testbed",
        "//src/material/form-field",
        "//src/material/form-field/testing/control",
        "//src/material/select",
    ],
    deps = [
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/forms",
        "//:node_modules/@angular/platform-browser",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [
        ":unit_tests_lib",
    ],
)
