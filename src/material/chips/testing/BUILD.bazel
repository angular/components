load("//tools:defaults.bzl", "ng_test_library", "ng_web_test_suite", "ts_library")

package(default_visibility = ["//visibility:public"])

ts_library(
    name = "testing",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    deps = [
        "//src/cdk/testing",
    ],
)

ng_test_library(
    name = "unit_tests_lib",
    srcs = glob(["**/*.spec.ts"]),
    deps = [
        ":testing",
        "//src/cdk/keycodes",
        "//src/cdk/testing",
        "//src/cdk/testing/testbed",
        "//src/material/chips",
        "//src/material/icon",
        "//src/material/icon/testing",
        "@npm//@angular/forms",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [
        ":unit_tests_lib",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
