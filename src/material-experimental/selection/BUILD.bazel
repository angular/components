load("//tools:defaults.bzl", "sass_binary", "sass_library")
load("//tools:defaults2.bzl", "ng_project")

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "selection",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [":selection_column_scss"],
    deps = [
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/core",
        "//src/material-experimental:node_modules/@angular/cdk",
        "//src/material-experimental:node_modules/@angular/cdk-experimental",
        "//src/material-experimental:node_modules/@angular/material",
    ],
)

sass_library(
    name = "selection_scss_lib",
    srcs = glob(["**/_*.scss"]),
    deps = ["//src/material:sass_lib"],
)

sass_binary(
    name = "selection_column_scss",
    src = "selection-column.scss",
)
